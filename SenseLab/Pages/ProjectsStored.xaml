<Page x:Class="SenseLab.Pages.ProjectsStored"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ma="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro" 
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
	Title="Projects Stored"
    KeepAlive="True">
    <Page.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <GroupBox
                Header="{Binding}"/>
        </DataTemplate>
    </Page.Resources>
    <ma:MetroAnimatedTabControl
        ma:TabControlHelper.IsUnderlined="True">
        <ma:MetroTabItem
            Header="Storage 1"
            CloseButtonEnabled="True">
            <ListBox>
                <ListBoxItem Content="Project 1" ContentTemplate="{StaticResource ItemTemplate}"/>
                <ListBoxItem Content="Project 2" ContentTemplate="{StaticResource ItemTemplate}"/>
            </ListBox>
        </ma:MetroTabItem>
        <ma:MetroTabItem
            Header="Storage 2"
            CloseButtonEnabled="True"/>
        <ma:MetroTabItem
            Header="+"/>
    </ma:MetroAnimatedTabControl>
</Page>
